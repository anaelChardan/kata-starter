{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./bin"],
  },
  "include": [
    "src/**/*.ts",
    "bin/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}